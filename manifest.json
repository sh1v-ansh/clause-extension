{
  "manifest_version": 3,
  "name": "Clause - Know Your Rights",
  "version": "1.0",
  "description": "Scan contracts and listings for illegal clauses",
  "permissions": ["activeTab", "tabs", "storage"],
  "host_permissions": [
    "https://*.airbnb.com/*",
    "*://*/*.pdf",
    "http://localhost:3000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.airbnb.com/rooms/*",
        "*://*/*.pdf",
        "file:///*.pdf"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
